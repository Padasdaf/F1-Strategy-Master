<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>F1 Strategy Simulation</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
<div class="container">
    <h1 class="text-center">F1 Strategy Simulation</h1>

    <h2 class="text-center mt-5">Simulate Strategy</h2>
    <form id="simulate-form" class="mt-4">
        <div class="form-group">
            <label for="grid">Grid Position:</label>
            <input type="number" class="form-control" id="grid" name="grid" min="1" max="20" value="10">
        </div>
        <div class="form-group">
            <label for="laps">Total Laps:</label>
            <input type="number" class="form-control" id="laps" name="laps" value="75">
        </div>
        <div class="form-group">
            <label for="pit_stop_times">Number of Pit Stops:</label>
            <select class="form-control" id="pit_stop_times" name="pit_stop_times">
                <option value="1">1</option>
                <option value="2" selected>2</option>
                <option value="3">3</option>
            </select>
        </div>

        <!-- Placeholder for dynamically generated stints -->
        <div id="stints-container"></div>

        <div class="form-group">
            <label for="track">Track:</label>
            <select class="form-control" id="track" name="track">
                <option value="Monza">Monza</option>
                <option value="Silverstone">Silverstone</option>
                <option value="Spa-Francorchamps">Spa-Francorchamps</option>
                <option value="Circuit de Monaco">Circuit de Monaco</option>
                <option value="Suzuka">Suzuka</option>
                <option value="Interlagos">Interlagos</option>
                <option value="Red Bull Ring">Red Bull Ring</option>
                <option value="Yas Marina">Yas Marina</option>
                <option value="Circuit of the Americas">Circuit of the Americas</option>
                <option value="Marina Bay">Marina Bay</option>
                <!-- Add more F1 tracks as needed -->
            </select>
        </div>
        <div class="form-group">
            <label for="weather">Weather:</label>
            <select class="form-control" id="weather" name="weather">
                <option value="Sunny">Sunny</option>
                <option value="Rainy">Rainy</option>
                <option value="Cloudy">Cloudy</option>
            </select>
        </div>
        <div class="form-group">
            <label for="time_of_day">Time of Day:</label>
            <select class="form-control" id="time_of_day" name="time_of_day">
                <option value="Morning">Morning</option>
                <option value="Afternoon">Afternoon</option>
                <option value="Evening">Evening</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Simulate</button>
    </form>

    <div id="simulation-result" class="mt-4"></div>

    <a href="/" class="btn btn-secondary mt-4">Back to Main Page</a>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="/scripts.js"></script>
</body>
</html>
